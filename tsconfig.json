{
  "ts-node": {
    "transpileOnly": true
  },
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "build",
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": false,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "index.ts", "cli.ts"],
  "exclude": ["node_modules", ".vscode"]
}
